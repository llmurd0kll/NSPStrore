@model List<NspStore.Domain.Entities.Address>
@{
    ViewData["Title"] = "Мои адреса";
}

<section class="addresses">
    <h1>Мои адреса</h1>
    <p><a class="btn btn--primary" href="@Url.Action("Create")">Добавить адрес</a></p>

    @if (!Model.Any())
    {
        <p>Адреса не добавлены.</p>
    }
    else
    {
        <table class="cart__table">
            <thead>
                <tr><th>Город</th><th>Улица</th><th>Квартира</th><th>Индекс</th><th>По умолчанию</th><th></th></tr>
            </thead>
            <tbody>
                @foreach (var a in Model)
                {
                    <tr>
                        <td>@a.City</td>
                        <td>@a.Street</td>
                        <td>@a.Apartment</td>
                        <td>@a.PostalCode</td>
                        <td>@(a.IsDefault ? "Да" : "Нет")</td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = a.Id })">Изменить</a>
                            <form method="post" action="@Url.Action("Delete", new { id = a.Id })" style="display:inline">
                                <button class="btn" type="submit">Удалить</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</section>
