@{
    ViewData["Title"] = "Заказ оформлен";
}

<section class="section success">
    <div class="container">
        <h1 class="h1">Спасибо за заказ!</h1>
        <p class="order-number" aria-live="polite">
            Ваш заказ №@ViewBag.OrderId успешно оформлен.
        </p>
        <div class="section__actions">
            <a class="btn btn--primary" asp-controller="Catalog" asp-action="Index">Вернуться в каталог</a>
            <a class="btn btn--secondary" asp-controller="Account" asp-action="Orders">Мои заказы</a>
        </div>
    </div>
</section>