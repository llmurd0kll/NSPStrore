@model NspStore.Web.ViewModels.LoginVm
@{
    ViewData["Title"] = "Вход";
}

<section class="auth">
    <h1 class="auth__title">Вход</h1>
    <form class="form form--auth" method="post">
        <div class="form__row">
            <label class="form__label">Почта</label>
            <input class="form__input" asp-for="Email" />
            <span class="form__error" asp-validation-for="Email"></span>
        </div>
        <div class="form__row">
            <label class="form__label">Пароль</label>
            <input class="form__input" asp-for="Password" type="password" />
            <span class="form__error" asp-validation-for="Password"></span>
        </div>
        <div class="form__row">
            <input type="checkbox" asp-for="RememberMe" id="RememberMe" />
            <label class="form__label" for="RememberMe">Запомнить меня</label>
        </div>
        <input type="hidden" asp-for="ReturnUrl" />
        <button class="btn btn--primary" type="submit">Войти</button>
    </form>
</section>
