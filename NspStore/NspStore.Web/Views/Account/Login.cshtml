@model NspStore.Application.ViewsModels.LoginVm
@{
    ViewData["Title"] = "Вход";
}

<section class="section auth">
    <div class="container">
        <h1 class="h1 auth__title">Вход</h1>

        <form class="form form--auth" method="post">
            @Html.AntiForgeryToken()

            <div class="form__row">
                <label asp-for="Email" class="form__label"></label>
                <input class="form__input" asp-for="Email" type="email" autocomplete="username" />
                <span class="form__error" asp-validation-for="Email"></span>
            </div>

            <div class="form__row">
                <label asp-for="Password" class="form__label"></label>
                <input class="form__input" asp-for="Password" type="password" autocomplete="current-password" />
                <span class="form__error" asp-validation-for="Password"></span>
            </div>

            <div class="form__row form__row--checkbox">
                <input type="checkbox" asp-for="RememberMe" id="RememberMe" class="form__checkbox" />
                <label class="form__label" for="RememberMe">Запомнить меня</label>
            </div>

            <input type="hidden" asp-for="ReturnUrl" />

            <div class="section__actions">
                <button class="btn btn--primary" type="submit">Войти</button>
                <a class="btn btn--secondary" asp-controller="Account" asp-action="Register">Регистрация</a>
            </div>
        </form>
    </div>
</section>
