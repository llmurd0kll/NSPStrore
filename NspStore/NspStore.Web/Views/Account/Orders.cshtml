@model IEnumerable<NspStore.Domain.Entities.Order>
@{
    ViewData["Title"] = "Мои заказы";
}

<h1>Мои заказы</h1>

@if (!Model.Any())
{
    <p>У вас пока нет заказов.</p>
}
else
{
    <table class="cart__table">
        <thead>
            <tr><th>ID</th><th>Дата</th><th>Сумма</th><th>Статус</th><th>Товары</th></tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td>@o.Id</td>
                    <td>@o.CreatedAt.ToLocalTime()</td>
                    <td>@o.Total.ToString("0.00") BYN</td>
                    <td>@o.Status</td>
                    <td>
                        <ul>
                            @foreach (var i in o.Items)
                            {
                                <li>@i.ProductName × @i.Quantity</li>
                            }
                        </ul>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
