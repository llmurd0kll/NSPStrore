@model NspStore.Application.ViewsModels.RegisterVm
@{
    ViewData["Title"] = "Регистрация";
    }

<section class="section auth">
    <div class="container">
        <h1 class="h1 auth__title">Регистрация</h1>

        <form class="form form--auth" method="post">
            @Html.AntiForgeryToken()

            <!-- Общие ошибки (например, "Пароль слишком короткий") -->
            <div asp-validation-summary="ModelOnly" class="alert alert--error"></div>

            <div class="form__row">
                <label asp-for="Email" class="form__label"></label>
                <input class="form__input" asp-for="Email" type="email" autocomplete="username" />
                <span class="form__error" asp-validation-for="Email"></span>
            </div>

            <div class="form__row">
                <label asp-for="FullName" class="form__label"></label>
                <input class="form__input" asp-for="FullName" autocomplete="name" />
                <span class="form__error" asp-validation-for="FullName"></span>
            </div>

            <div class="form__row">
                <label asp-for="Password" class="form__label"></label>
                <input class="form__input" asp-for="Password" type="password" autocomplete="new-password" />
                <span class="form__error" asp-validation-for="Password"></span>
                <small class="form__hint">Минимум 6 символов</small>
            </div>

            <div class="form__row">
                <label asp-for="ConfirmPassword" class="form__label"></label>
                <input class="form__input" asp-for="ConfirmPassword" type="password" autocomplete="new-password" />
                <span class="form__error" asp-validation-for="ConfirmPassword"></span>
            </div>

            <div class="section__actions">
                <button class="btn btn--primary" type="submit">Создать аккаунт</button>
                <a class="btn btn--secondary" asp-controller="Account" asp-action="Login">Уже есть аккаунт</a>
            </div>
        </form>
    </div>
</section>
