<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NSP Store</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="navbar">
                <!-- Логотип -->
                <a class="navbar__brand" asp-controller="Home" asp-action="Index">NSP Store</a>

                <!-- Кнопка гамбургера -->
                <button class="navbar__toggle" type="button"
                        onclick="document.querySelector('.navbar__menu').classList.toggle('navbar__menu--open')">
                    ☰
                </button>

                <!-- Навигация -->
                <nav class="navbar__menu">
                    <a class="navbar__link" asp-controller="Catalog" asp-action="Index">Каталог</a>
                    <a class="navbar__link" asp-controller="Cart" asp-action="Index">Корзина</a>
                    <a class="navbar__link" asp-controller="Account" asp-action="Orders">Мои заказы</a>
                    <a class="navbar__link" asp-controller="Account" asp-action="Profile">Профиль</a>
                    <a class="navbar__link" asp-controller="Account" asp-action="Login">Войти</a>
                </nav>
            </div>
        </div>
    </header>




    <main class="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year — NSP Store</p>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
