<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NSP Store</title>

    <!-- Базовые стили -->
    <link rel="stylesheet" href="~/css/reset.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/variables.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/components.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="navbar">
                <!-- Логотип -->
                <a class="navbar__brand" asp-controller="Home" asp-action="Index">NSP Store</a>

                <!-- Кнопка гамбургера -->
                <button class="navbar__toggle" type="button" id="menuToggle">☰</button>

                <!-- Навигация -->
                <nav class="navbar__menu" id="mainMenu">
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <a class="navbar__link" asp-area="Admin" asp-controller="Products" asp-action="Index">
                            Администрирование
                        </a>
                    }
                    <a class="navbar__link" asp-controller="Catalog" asp-action="Index">Каталог</a>
                    <a class="navbar__link" asp-controller="Cart" asp-action="Index">Корзина</a>

                    @if (User.Identity?.IsAuthenticated ?? false)
                    {
                        <a class="navbar__link" asp-controller="Account" asp-action="Orders">Мои заказы</a>
                        <a class="navbar__link" asp-controller="Account" asp-action="Profile">
                            @User.Identity.Name
                        </a>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="navbar__form">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="navbar__link navbar__logout">Выйти</button>
                        </form>
                    }
                    else
                    {
                        <a class="navbar__link" asp-controller="Account" asp-action="Login">Войти</a>
                        <a class="navbar__link" asp-controller="Account" asp-action="Register">Регистрация</a>
                    }
                </nav>
            </div>
        </div>
    </header>

    <main class="main">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year — NSP Store</p>
        </div>
    </footer>

    <!-- Скрипты -->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
