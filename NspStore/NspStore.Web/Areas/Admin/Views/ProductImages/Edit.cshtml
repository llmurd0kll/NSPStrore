@model NspStore.Application.ViewsModels.ProductImageVm
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Редактировать изображение";
    }

<section class="section admin-product-images">
    <div class="container">
        <h1 class="h1">Редактировать изображение</h1>

        <div class="preview">
            <img src="@Model.OriginalUrl" alt="preview" class="preview__img" style="max-height:200px;" />
        </div>

        <form asp-action="Edit" method="post" enctype="multipart/form-data" class="form">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="alert alert--error"></div>

            <div class="form__row">
                <label class="form__label">Заменить файл (необязательно)</label>
                <input type="file" name="file" class="input" />
            </div>

            <div class="form__row">
                <label asp-for="SortOrder" class="form__label"></label>
                <input asp-for="SortOrder" class="input" type="number" />
                <span asp-validation-for="SortOrder" class="input__error"></span>
            </div>

            <div class="form__actions">
                <button type="submit" class="btn btn--primary">Сохранить</button>
                <a class="btn btn--secondary"
                   asp-action="Index"
                   asp-route-productId="@ViewBag.ProductId">
                    Отмена
                </a>
            </div>
        </form>
    </div>
</section>

    @section Scripts {
        @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
