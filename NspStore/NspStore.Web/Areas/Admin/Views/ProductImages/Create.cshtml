@model NspStore.Domain.Entities.ProductImage
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Добавить изображение";
    var productId = ViewBag.ProductId as int? ?? 0;
}

<section class="section admin-product-images">
    <div class="container">
        <h1 class="h1">Добавить изображение</h1>

        <form asp-action="Create" method="post" enctype="multipart/form-data" class="form">
            <input type="hidden" name="productId" value="@productId" />

            <div class="form__row">
                <label class="form__label">Файл изображения</label>
                <input type="file" name="file" class="input" />
            </div>

            <div class="form__row">
                <label asp-for="SortOrder" class="form__label">Порядок</label>
                <input asp-for="SortOrder" class="input" type="number" value="0" />
                <span asp-validation-for="SortOrder" class="input__error"></span>
            </div>

            <div class="form__actions">
                <button type="submit" class="btn btn--primary">Загрузить</button>
                <a class="btn btn--secondary"
                   asp-action="Index"
                   asp-route-productId="@productId">
                    Отмена
                </a>
            </div>
        </form>
    </div>
</section>
