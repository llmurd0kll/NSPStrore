@model NspStore.Domain.Entities.ProductImage
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Удалить изображение";
}

<section class="section admin-product-images">
    <div class="container">
        <h1 class="h1">Удалить изображение</h1>

        <div class="warning-text">
            Вы уверены, что хотите удалить это изображение?
        </div>

        <div class="preview">
            <img src="@Model.Url" alt="preview" class="preview__img" />
            <p><strong>URL:</strong> @Model.Url</p>
            <p><strong>Порядок:</strong> @Model.SortOrder</p>
        </div>

        <form asp-action="Delete" method="post" class="form">
            <input type="hidden" asp-for="Id" />
            <div class="form__actions">
                <button type="submit" class="btn btn--danger">Удалить</button>
                <a class="btn btn--secondary"
                   asp-action="Index"
                   asp-route-productId="@Model.ProductId">
                    Отмена
                </a>
            </div>
        </form>
    </div>
</section>
