@model IEnumerable<NspStore.Domain.Entities.ProductImage>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Изображения товара";
}

<section class="section admin-product-images">
    <div class="container">
        <h1 class="h1">Изображения для @ViewBag.ProductName</h1>

        <div class="toolbar toolbar--between">
            <a class="btn btn--primary" asp-action="Create" asp-route-productId="@ViewBag.ProductId">Добавить изображение</a>
            <a class="btn" asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@ViewBag.ProductId">Назад к товару</a>
        </div>

        <table class="table table--admin">
            <thead>
                <tr>
                    <th class="ta-left">Id</th>
                    <th class="ta-left">Изображение</th>
                    <th class="ta-left">Порядок</th>
                    <th class="ta-right">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var img in Model)
                {
                    <tr>
                        <td>@img.Id</td>
                        <td>
                            <div class="preview">
                                <img src="@img.Url" alt="Product image" class="preview__img" />
                                <span class="muted">@img.Url</span>
                            </div>
                        </td>
                        <td>@img.SortOrder</td>
                        <td class="ta-right actions">
                            <a class="btn btn--sm btn--danger" asp-action="Delete" asp-route-id="@img.Id">Удалить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
