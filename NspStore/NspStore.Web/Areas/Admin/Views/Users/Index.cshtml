@model IEnumerable<NspStore.Web.Areas.Admin.ViewModels.UserVm>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Пользователи";
}

<section class="section admin-users">
    <div class="container">
        <h1 class="h1">Пользователи</h1>

        @if (!Model.Any())
        {
            <div class="alert alert--info">Пользователей пока нет.</div>
        }
        else
        {
            <table class="table table--admin">
                <thead>
                    <tr>
                        <th class="ta-left">Id</th>
                        <th class="ta-left">Email</th>
                        <th class="ta-left">Имя</th>
                        <th class="ta-left">Роли</th>
                        <th class="ta-right">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var u in Model)
                    {
                        <tr>
                            <td>@u.Id</td>
                            <td>@u.Email</td>
                            <td>@u.FullName</td>
                            <td>
                                @if (u.Roles.Any())
                                {
                                    foreach (var r in u.Roles)
                                    {
                                        <span class="badge badge--@r.ToLower()">@r</span>
                                    }
                                }
                                else
                                {
                                    <span class="muted">Нет ролей</span>
                                }
                            </td>
                            <td class="ta-right actions">
                                <a class="btn btn--sm" asp-action="Edit" asp-route-id="@u.Id">Редактировать</a>
                                <a class="btn btn--sm btn--danger" asp-action="Delete" asp-route-id="@u.Id">Удалить</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</section>
