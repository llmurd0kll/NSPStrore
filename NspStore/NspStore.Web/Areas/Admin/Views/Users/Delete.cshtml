@model NspStore.Infrastructure.Identity.ApplicationUser
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Удалить пользователя";
}

<section class="section admin-users">
    <div class="container">
        <h1 class="h1">Удалить пользователя</h1>

        <p class="warning-text">
            Вы уверены, что хотите удалить пользователя <strong>@Model.Email</strong>?
        </p>

        <form asp-action="Delete" method="post" class="form">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="form__actions">
                <button class="btn btn--danger" type="submit">Удалить</button>
                <a class="btn btn--secondary" asp-action="Index">Отмена</a>
            </div>
        </form>
    </div>
</section>
