@model IEnumerable<NspStore.Web.Areas.Admin.ViewModels.OrderVm>
@using NspStore.Domain.Enums
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Заказы";
}

<section class="section admin-orders">
    <div class="container">
        <h1 class="h1">Заказы</h1>

        <!-- Панель фильтрации -->
        <div class="orders-toolbar">
            <form method="get" class="form-inline">
                <select name="status" class="input">
                    <option value="">Все</option>
                    @foreach (OrderStatus status in Enum.GetValues(typeof(OrderStatus)))
                    {
                        <option value="@status">@Html.DisplayFor(_ => status)</option>
                    }
                </select>
                <button type="submit" class="btn btn--primary">Фильтр</button>
            </form>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert--info">
                Заказов пока нет.
            </div>
        }
        else
        {
            <table class="table table--admin orders-table">
                <thead>
                    <tr>
                        <th class="ta-left">@Html.DisplayNameFor(m => m.First().Id)</th>
                        <th class="ta-left">@Html.DisplayNameFor(m => m.First().CreatedAt)</th>
                        <th class="ta-left">@Html.DisplayNameFor(m => m.First().ShippingAddress)</th>
                        <th class="ta-left">@Html.DisplayNameFor(m => m.First().Status)</th>
                        <th class="ta-right">@Html.DisplayNameFor(m => m.First().Total)</th>
                        <th class="ta-right">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model)
                    {
                        <tr class="@(o.Status == OrderStatus.New ? "row--highlight" : "")">
                            <td>@o.Id</td>
                            <td>@o.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@o.ShippingAddress</td>
                            <td>
                                <span class="order-status @(o.Status switch {
                                    OrderStatus.New => "order-status--new",
                                    OrderStatus.Confirmed => "order-status--paid",
                                    OrderStatus.Paid => "order-status--paid",
                                    OrderStatus.Packed => "order-status--packed",
                                    OrderStatus.Shipped => "order-status--shipped",
                                    OrderStatus.Completed => "order-status--completed",
                                    OrderStatus.Cancelled => "order-status--cancelled",
                                    _ => "order-status--new"
                                })">
                                    @Html.DisplayFor(_ => o.Status)
                                </span>
                            </td>
                            <td class="ta-right">@o.Total.ToString("0.00") BYN</td>
                            <td class="ta-right actions">
                                <a class="btn btn--sm" asp-action="Details" asp-route-id="@o.Id">Подробнее</a>
                                <a class="btn btn--sm btn--danger" asp-action="Delete" asp-route-id="@o.Id">Удалить</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</section>
