@model NspStore.Web.Areas.Admin.ViewModels.OrderVm
@using NspStore.Domain.Enums
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<section class="section admin-order">
    <div class="container">
        <h1 class="h1">Заказ №@Model.Id</h1>

        <div class="admin-order__info">
            <p><strong>Дата:</strong> @Model.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</p>
            <p><strong>Адрес:</strong> @Model.ShippingAddress</p>
            <p>
                <strong>Статус:</strong>
                <span class="badge badge--@Model.Status.ToString().ToLower()">@Model.Status</span>
            </p>
        </div>

        <h2 class="h2">Товары</h2>
        <table class="table admin-order__items">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Цена</th>
                    <th>Кол-во</th>
                    <th>Сумма</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.Items)
                {
                    <tr>
                        <td>@i.ProductName</td>
                        <td>@i.Price.ToString("0.00") BYN</td>
                        <td>@i.Qty</td>
                        <td>@i.LineTotal.ToString("0.00") BYN</td>
                    </tr>
                }
            </tbody>
        </table>

        <p class="admin-order__total"><strong>Итого:</strong> @Model.Total.ToString("0.00") BYN</p>

        <h2 class="h2">Статус заказа</h2>
        <form asp-action="ChangeStatus" method="post" class="form">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="form__row">
                <select name="status">
                    @foreach (OrderStatus s in Enum.GetValues(typeof(OrderStatus)))
                    {
                        <option value="@((int)s)" selected="@(s == Model.Status)">@s</option>
                    }
                </select>
            </div>
            <div class="form__actions">
                <button type="submit" class="btn btn--primary">Обновить</button>
            </div>
        </form>
    </div>
</section>
