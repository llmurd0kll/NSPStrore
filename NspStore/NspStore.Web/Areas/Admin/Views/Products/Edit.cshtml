@model NspStore.Web.Areas.Admin.ViewModels.ProductEditVm

<section class="section admin-product-form">
    <div class="container">
        <div class="section__header">
            <h1 class="h1">✏️ Редактировать товар</h1>
        </div>

        <form asp-action="Edit" method="post" enctype="multipart/form-data" class="form" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="alert alert--error"></div>

            <!-- Название -->
            <div class="form__row">
                <label asp-for="Name" class="form__label"></label>
                <input asp-for="Name" class="input" />
                <span asp-validation-for="Name" class="input__error"></span>
            </div>

            <!-- Slug -->
            <div class="form__row">
                <label asp-for="Slug" class="form__label"></label>
                <input asp-for="Slug" class="input" />
                <span asp-validation-for="Slug" class="input__error"></span>
            </div>

            <!-- SKU -->
            <div class="form__row">
                <label asp-for="Sku" class="form__label"></label>
                <input asp-for="Sku" class="input" />
                <span asp-validation-for="Sku" class="input__error"></span>
            </div>

            <!-- Текущая цена -->
            @if (Model.CurrentPrice.HasValue)
                {
                <div class="form__row">
                    <label asp-for="CurrentPrice" class="form__label"></label>
                    <input class="input" value="@Model.CurrentPrice.Value.ToString("0.00")" readonly />
                </div>
                }

            <!-- Новая цена -->
            <div class="form__row">
                <label asp-for="NewPrice" class="form__label"></label>
                <input asp-for="NewPrice" class="input" type="number" step="0.01" />
                <span asp-validation-for="NewPrice" class="input__error"></span>
            </div>

            <!-- Валюта -->
            <div class="form__row">
                <label asp-for="Currency" class="form__label"></label>
                <select asp-for="Currency" class="input">
                    <option value="BYN">BYN</option>
                    <option value="USD">USD</option>
                    <option value="EUR">EUR</option>
                </select>
                <span asp-validation-for="Currency" class="input__error"></span>
            </div>

            <!-- Краткое описание -->
            <div class="form__row">
                <label asp-for="ShortDescription" class="form__label"></label>
                <textarea asp-for="ShortDescription" class="input"></textarea>
                <span asp-validation-for="ShortDescription" class="input__error"></span>
            </div>

            <!-- Категория -->
            <div class="form__row">
                <label asp-for="CategoryId" class="form__label"></label>
                <select asp-for="CategoryId" class="input"
                        asp-items="@(new SelectList(Model.CategoryOptions, "Id", "Name"))">
                    <option value="">-- выберите категорию --</option>
                </select>
                <span asp-validation-for="CategoryId" class="input__error"></span>
            </div>

            <!-- Картинки -->
            <div class="form__row">
                <label asp-for="Images" class="form__label"></label>
                <div class="images-list">
                    @if (Model.Images.Any())
                        {
                        @foreach (var img in Model.Images)
                            {
                            <div class="image-item">
                                <img src="@img.ThumbUrl" alt="Фото товара" class="thumb" />
                                <label>
                                    <input type="checkbox" name="DeleteImages" value="@img.Id" />
                                    Удалить
                                </label>
                            </div>
                            }
                        }
                    else
                        {
                        <p class="muted">Нет загруженных картинок</p>
                        }
                </div>

                <div class="form__row">
                    <label class="form__label">Добавить новые</label>
                    <input type="file" name="NewImages" multiple />
                </div>
            </div>

            <!-- Кнопки -->
            <div class="form__actions">
                <button type="submit" class="btn btn--primary">💾 Сохранить</button>
                <a asp-action="Index" class="btn btn--secondary">↩️ Отмена</a>
            </div>
        </form>
    </div>
</section>

    @section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }
