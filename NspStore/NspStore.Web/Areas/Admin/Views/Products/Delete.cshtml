@using NspStore.Application.Services
@model NspStore.Domain.Entities.Product
@{
    ViewData["Title"] = "Удалить товар";
}

<section class="section admin-product">
    <div class="container">
        <h1 class="h1">Удалить товар</h1>

        <div asp-validation-summary="ModelOnly" class="alert alert--error"></div>

        <p class="warning-text">
            Вы уверены, что хотите удалить товар <strong>«@Model.Name»</strong> (SKU: @Model.Sku)?
        </p>

        <div class="preview">
            <p><strong>Цена:</strong> @PriceHelper.GetCurrentPrice(Model).ToString("0.00") BYN</p>
            <p><strong>Категория:</strong> @Model.Category?.Name</p>
        </div>


        <form asp-action="Delete" method="post" class="form">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="form__actions">
                <button class="btn btn--danger" type="submit">Удалить</button>
                <a class="btn btn--secondary" asp-action="Index">Отмена</a>
            </div>
        </form>
    </div>
</section>
