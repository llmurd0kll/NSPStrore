@{
    var title = (ViewData?["Title"] as string) ?? "Админка";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@title - NSP Store Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Базовые стили -->
    <link rel="stylesheet" href="~/css/reset.css" />
    <link rel="stylesheet" href="~/css/variables.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/components.css" />
    <link rel="stylesheet" href="~/css/admin.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="header">
    <div class="container">
        <div class="navbar">
            <!-- Логотип -->
            <a class="navbar__brand" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                NSP Store Admin
            </a>

            <!-- Кнопка гамбургера -->
            <button class="navbar__toggle" type="button" id="menuToggle">☰</button>

            <!-- Навигация -->
            <nav class="navbar__menu" id="mainMenu">
                <a class="navbar__link" asp-area="" asp-controller="Home" asp-action="Index" target="_blank">
                    🏠 На сайт
                </a>
                <a class="navbar__link" asp-area="Admin" asp-controller="Products" asp-action="Index">
                    📦 Товары
                </a>
                <a class="navbar__link" asp-area="Admin" asp-controller="Categories" asp-action="Index">
                    📂 Категории
                </a>
                <a class="navbar__link" asp-area="Admin" asp-controller="Orders" asp-action="Index">
                    🧾 Заказы
                </a>
                <a class="navbar__link" asp-area="Admin" asp-controller="Users" asp-action="Index">
                    👤 Пользователи
                </a>

                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="navbar__form">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="navbar__link navbar__logout">Выйти</button>
                </form>
            </nav>
        </div>
    </div>
</header>


    <div class="admin-layout">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <nav class="admin-menu">
                <a class="admin-menu__link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">📊 Dashboard</a>
                <a class="admin-menu__link" asp-area="Admin" asp-controller="Products" asp-action="Index">📦 Товары</a>
                <a class="admin-menu__link" asp-area="Admin" asp-controller="Categories" asp-action="Index">📂 Категории</a>
                <a class="admin-menu__link" asp-area="Admin" asp-controller="Orders" asp-action="Index">🧾 Заказы</a>
                <a class="admin-menu__link" asp-area="Admin" asp-controller="Users" asp-action="Index">👤 Пользователи</a>
            </nav>
        </aside>

        <!-- Main content -->
        <main class="admin-main">
            <div class="container">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="admin-footer">
        <div class="container">
            <p class="muted">© @DateTime.Now.Year NSP Store Admin</p>
        </div>
    </footer>

    <!-- Сначала jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Потом validate -->
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const toggle = document.getElementById("menuToggle");
            const menu = document.getElementById("mainMenu");

            if (toggle && menu) {
                toggle.addEventListener("click", function () {
                    menu.classList.toggle("navbar__menu--open");
                });
            }
        });
    </script>
</body>


</html>
