<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - NSP Store Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Базовые стили -->
    <link rel="stylesheet" href="~/css/reset.css" />
    <link rel="stylesheet" href="~/css/variables.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/components.css" />
    <link rel="stylesheet" href="~/css/admin.css" /> <!-- наш файл для админки -->
    @RenderSection("Styles", required: false)
</head>
<body>
    <header class="header">
        <div class="container navbar">
            <div class="navbar__brand">NSP Admin</div>
            <form asp-area="Identity" asp-controller="Account" asp-action="Logout" method="post" class="navbar__form">
                <button type="submit" class="navbar__logout">Выйти</button>
            </form>
        </div>
    </header>

    <div class="admin-layout">
        <!-- Sidebar -->
        <aside class="admin-sidebar">
            <nav class="admin-menu">
                <a class="admin-menu__link" asp-area="Admin" asp-controller="Products" asp-action="Index">📦 Товары</a>
                <a class="admin-menu__link" asp-area="Admin" asp-controller="Categories" asp-action="Index">📂 Категории</a>
                <a class="admin-menu__link" asp-area="Admin" asp-controller="Orders" asp-action="Index">🧾 Заказы</a>
                <a class="admin-menu__link" asp-area="Admin" asp-controller="Users" asp-action="Index">👤 Пользователи</a>
            </nav>
        </aside>

        <!-- Main content -->
        <main class="admin-main">
            <div class="container">
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <p class="muted">© NSP Store Admin, @DateTime.Now.Year</p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
