@model IEnumerable<NspStore.Domain.Entities.Category>
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Категории";
}

<section class="section admin-categories">
    <div class="container">
        <h1 class="h1">Категории</h1>

        <div class="toolbar toolbar--between">
            <a class="btn btn--primary" asp-action="Create">Добавить категорию</a>
            <a class="btn btn--secondary" asp-area="Admin" asp-controller="Products" asp-action="Index">
                ← К товарам
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert--info">
                Категорий пока нет.
            </div>
        }
        else
        {
            <table class="table table--admin">
                <thead>
                    <tr>
                        <th class="ta-right">Id</th>
                        <th class="ta-left">Название</th>
                        <th class="ta-left">Slug</th>
                        <th class="ta-right">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td class="ta-right">@c.Id</td>
                            <td>@c.Name</td>
                            <td>@c.Slug</td>
                            <td class="ta-right actions">
                                <a class="btn btn--sm" asp-action="Edit" asp-route-id="@c.Id">Редактировать</a>
                                <a class="btn btn--sm btn--danger" asp-action="Delete" asp-route-id="@c.Id">Удалить</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        @if (TempData["Error"] is string err)
        {
            <div class="alert alert--error">@err</div>
        }
        @if (TempData["Success"] is string ok)
        {
            <div class="alert alert--success">@ok</div>
        }
    </div>
</section>
