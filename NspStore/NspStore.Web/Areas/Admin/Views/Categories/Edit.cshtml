@model NspStore.Domain.Entities.Category
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Редактировать категорию";
}

<section class="section admin-category">
    <div class="container">
        <h1 class="h1">Редактировать категорию</h1>

        <form asp-action="Edit" method="post" class="form" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="alert alert--error"></div>

            <div class="form__row">
                <label asp-for="Name" class="form__label"></label>
                <input asp-for="Name" class="input" />
                <span class="input__error" asp-validation-for="Name"></span>
            </div>

            <div class="form__row">
                <label asp-for="Slug" class="form__label"></label>
                <input asp-for="Slug" class="input" />
                <span class="input__error" asp-validation-for="Slug"></span>
            </div>

            <div class="form__actions">
                <button class="btn btn--primary" type="submit">Сохранить</button>
                <a class="btn btn--secondary" asp-action="Index">Отмена</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
