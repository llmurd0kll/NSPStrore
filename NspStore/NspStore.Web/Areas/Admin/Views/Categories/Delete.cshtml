@model NspStore.Domain.Entities.Category
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Удалить категорию";
}

<section class="section admin-category">
    <div class="container">
        <h1 class="h1">Удалить категорию</h1>

        <div asp-validation-summary="ModelOnly" class="alert alert--error"></div>

        <p class="warning-text">
            Вы уверены, что хотите удалить категорию <strong>«@Model.Name»</strong>?
        </p>

        <form asp-action="Delete" method="post" class="form">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="form__actions">
                <button class="btn btn--danger" type="submit">Удалить</button>
                <a class="btn" asp-action="Index">Отмена</a>
            </div>
        </form>
    </div>
</section>
